{
  "fpsLimit": 120,
  "detectRetina": true,
  "autoPlay": true,
  "duration": 0,
  "pauseOnOutsideViewport": true,
  "pauseOnBlur": true,
  "background": {
    "color": {
      "value": "#1a1920"
    }
  },
  "fullScreen": {
    "enable": true,
    "zIndex": -1
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onClick": {
        "enable": false,
        "mode": "push"
      },
      "onHover": {
        "enable": true,
        "mode": "trail",
        "parallax": {
          "enable": false,
          "force": 2,
          "smooth": 10
        }
      },
      "resize": true
    },
    "modes": {
      "grab": {
        "distance": 300,
        "line_linked": {
          "opacity": 1
        }
      },
      "bubble": {
        "distance": 250,
        "duration": 2,
        "opacity": 8,
        "size": 5,
        "speed": 3
      },
      "push": {
        "quantity": 4,
        "particles_nb": 4
      },
      "repulse": {
        "distance": 100,
        "duration": 0.4
      },
      "remove": {
        "particles_nb": 2
      },
      "trail": {
        "delay": 0.01,
        "pauseOnStop": true,
        "quantity": 1,
        "particles": {
          "color": {
            "value": "#fff",
            "animation": {
              "enable": true,
              "speed": 250,
              "sync": true
            }
          },
          "move": {
            "outModes": "bounce"
          }
        },
        "size": {
          "value": 1,
          "animation": {
            "enable": true,
            "speed": 3,
            "minimumValue": 1,
            "sync": true,
            "startValue": "min",
            "destroy": "max"
          }
        }
      }
    }
  },
  "particles": {
    "reduceDuplicates": true,
    "color": {
      "value": "#ffffff"
    },
    "links": {
      "color": "#ffffff",
      "distance": 150,
      "enable": true,
      "opacity": 0.5,
      "width": 1
    },
    "collisions": {
      "enable": true
    },
    "move": {
      "enable": true,
      "speed": {
        "min": 0.1,
        "max": 3
      },
      "direction": "none",
      "random": true,
      "straight": false,
      "outMode": "bounce",
      "bounce": false,
      "decay": 0.0001
    },
    "number": {
      "value": 75,
      "limit": 300,
      "density": {
        "enable": true,
        "value_area": 800
      }
    },
    "opacity": {
      "value": 0.5,
      "random": true,
      "anim": {
        "enable": true,
        "speed": 1,
        "opacity_min": 0.1,
        "sync": true
      }
    },
    "shape": {
      "type": "circle",
      "stroke": {
        "width": 0,
        "color": "#fff"
      }
    },
    "size": {
      "value": 3,
      "random": true,
      "anim": {
        "enable": true,
        "speed": 15,
        "size_min": 0.1,
        "sync": true
      }
    },
    "line_linked": {
      "enable": true,
      "distance": 200,
      "color": "#ffffff",
      "opacity": 0.4,
      "width": 1
    }
  }
}
